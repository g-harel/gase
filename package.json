{
    "name": "okwolo",
    "version": "3.4.1",
    "description": "light javascript framework to build web applications",
    "main": "src/index.js",
    "keywords": [
        "okwolo",
        "vdom",
        "router",
        "state"
    ],
    "license": "MIT",
    "scripts": {
        "prepack": "webpack && gulp prepublish",
        "postpublish": "gulp publish && gulp push && gulp clean",
        "test": "run-s test:*",
        "test:eslint": "eslint **/*.js",
        "test:jest": "jest",
        "test:build": "run-s build gulp:*",
        "codecov": "jest --coverage && codecov",
        "build": "webpack --display=minimal",
        "gulp:prepublish": "gulp prepublish",
        "gulp:clean": "gulp clean"
    },
    "repository": {
        "type": "git",
        "url": "http://github.com/okwolo/okwolo.git"
    },
    "files": [
        "README.md",
        "src/",
        "lite.js",
        "standard.js",
        "server.js"
    ],
    "dependencies": {
        "he": "^1.1.1",
        "path-to-regexp": "^2.2.1"
    },
    "devDependencies": {
        "aws-sdk": "^2.254.1",
        "babel-core": "^6.26.3",
        "babel-loader": "^7.1.4",
        "babel-preset-env": "^1.7.0",
        "codecov": "^3.0.2",
        "compression-webpack-plugin": "^1.1.11",
        "copy-dir": "^0.3.0",
        "del": "^3.0.0",
        "eslint": "^4.19.1",
        "eslint-config-google": "^0.9.1",
        "globby": "^8.0.1",
        "gulp": "^3.9.1",
        "gulp-replace": "^1.0.0",
        "jest": "^23.1.0",
        "jest-serializer-html-string": "^1.0.1",
        "npm-run-all": "^4.1.3",
        "prepack": "0.2.27",
        "prepack-webpack-plugin": "1.1.0",
        "uglifyjs-webpack-plugin": "^1.2.5",
        "webpack": "^3.11.0"
    },
    "jest": {
        "testURL": "http://www.example.com/",
        "testMatch": [
            "**/test/**/!(test.setup).js"
        ],
        "setupTestFrameworkScriptFile": "./test/test.setup.js",
        "snapshotSerializers": [
            "jest-serializer-html-string"
        ]
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true
        },
        "parserOptions": {
            "ecmaVersion": 8
        },
        "extends": "google",
        "rules": {
            "indent": [
                2,
                4
            ],
            "linebreak-style": 0,
            "quotes": [
                2,
                "single"
            ],
            "semi": [
                2,
                "always"
            ],
            "max-len": 0,
            "strict": [
                2,
                "global"
            ],
            "require-jsdoc": 0
        }
    },
    "eslintIgnore": [
        "dist/"
    ]
}
