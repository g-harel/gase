{
    "name": "okwolo",
    "version": "3.0.0",
    "description": "light javascript framework to build web applications",
    "main": "src/index.js",
    "keywords": [
        "okwolo",
        "vdom",
        "router",
        "state"
    ],
    "license": "MIT",
    "scripts": {
        "prepack": "webpack && gulp prepublish",
        "postpublish": "gulp clean",
        "test": "run-s test:*",
        "test:eslint": "eslint **/*.js",
        "test:jest": "jest",
        "test:build": "run-s build gulp:*",
        "codecov": "jest --coverage && codecov",
        "build": "webpack",
        "gulp:prepublish": "gulp prepublish",
        "gulp:clean": "gulp clean"
    },
    "repository": {
        "type": "git",
        "url": "http://github.com/okwolo/okwolo.git"
    },
    "files": [
        "README.md",
        "dist/",
        "src/",
        "lite.js",
        "standard.js",
        "server.js"
    ],
    "dependencies": {
        "path-to-regexp": "^2.1.0"
    },
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-preset-env": "^1.6.1",
        "codecov": "^3.0.0",
        "compression-webpack-plugin": "^1.1.3",
        "del": "^3.0.0",
        "eslint": "^4.15.0",
        "eslint-config-google": "^0.9.1",
        "globby": "^7.1.1",
        "gulp": "^3.9.1",
        "gulp-replace": "^0.6.1",
        "jest": "^22.0.5",
        "jest-serializer-html-string": "^1.0.1",
        "npm-run-all": "^4.1.2",
        "uglifyjs-webpack-plugin": "^1.1.6",
        "webpack": "^3.10.0"
    },
    "jest": {
        "testURL": "http://www.example.com/",
        "testMatch": [
            "**/test/**/!(test.setup).js"
        ],
        "setupTestFrameworkScriptFile": "./test/test.setup.js",
        "snapshotSerializers": [
            "jest-serializer-html-string"
        ]
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true
        },
        "parserOptions": {
            "ecmaVersion": 8
        },
        "extends": "google",
        "rules": {
            "indent": [2, 4],
            "linebreak-style": 0,
            "quotes": [2, "single"],
            "semi": [2, "always"],
            "max-len": 0,
            "strict": [2, "global"]
        }
    },
    "eslintIgnore": [
        "dist/"
    ]
}